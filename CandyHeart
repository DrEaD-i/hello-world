<body>
    <div id="jar">
        <button id="shakeButton" onclick="shakeButton()">Shake the Jar</button>
        <div id="heartContainer"></div>
    </div>
    <script>
        // Messages
        var messages = ["BE YOU", "BIG FAN", "CHIN UP", "CRUSH IT", "DONâ€™T QUIT", "FEAR LESS", "GO 4 IT", "GOOD JOB", "GO TIME", "HIGH FIVE", "PROUD OF U", "PUSH THRU", "SUPER STAR", "U GOT THIS", "WAY 2 GO", "YOUDA BEST"];

        // Colors with descriptions
        var colors = [
            { name: "White (fruit punch)", value: "rgb(255, 86, 162)" },  // Fruit Punch
            { name: "Yellow (lemon-lime)", value: "rgb(253, 250, 87)" },  // Lemon-Lime
            { name: "Orange (orange)", value: "rgb(255, 159, 0)" },       // Orange
            { name: "Green (apple)", value: "rgb(52, 168, 83)" },          // Apple
            { name: "Pink (cherry)", value: "rgb(233, 30, 99)" },          // Cherry
            { name: "Blue (blue raspberry)", value: "rgb(66, 133, 244)" }  // Blue Raspberry
        ];

        function shakeButton() {
            var button = document.getElementById("shakeButton");
            button.classList.add("shake");

            // Reset shake animation after 500ms
            setTimeout(function() {
                button.classList.remove("shake");
            }, 500);

            var heartContainer = document.getElementById("heartContainer");
            heartContainer.innerHTML = ''; 

            var heart = document.createElement("div");
            heart.id = "heart";

            // Randomly select a message
            var randomIndexMessage = Math.floor(Math.random() * messages.length);
            var message = messages[randomIndexMessage];

            // Randomly select a color
            var randomIndexColor = Math.floor(Math.random() * colors.length);
            var color = colors[randomIndexColor].value; 

            var text = document.createElement("div");
            text.className = "text";
            text.textContent = message; 

            heart.appendChild(text);
            heartContainer.appendChild(heart);

            // Apply the selected color to the heart
            heart.style.setProperty('--heart-color', color);
        }
    </script>
</body>
</html>
